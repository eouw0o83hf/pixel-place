<Window x:Class="pixel_place.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:pixelPlace="clr-namespace:pixel_place"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open" Click="MenuItem_Open_Click"/>
                    <MenuItem Header="_Close" />
                    <MenuItem Header="_Save" />
                </MenuItem>
            </Menu>
            <WrapPanel>
                <Canvas Height="200" Width="200" Name="CurvesCanvas" Background="Azure" />
                <Image Height="80" Width="80" Name="MainImage" />
            </WrapPanel>
        </DockPanel>
    </Grid>
</Window>
